@inherits ComponenteCore

<Card Margin="Margin.Is3.FromBottom">
    <CardHeader Padding="Padding.Is2">
        @CardHeader
        <RadioGroup TValue="int" CheckedValue="PageNumber" Buttons="true" Float="Float.Right" Class="btn-group-xs" CheckedValueChanged="PageNumberChanged">
            <Radio TValue="int" Value="1">1</Radio>
            <Radio TValue="int" Value="2">2</Radio>
            <Radio TValue="int" Value="3">3</Radio>
            <Radio TValue="int" Value="4">4</Radio>
        </RadioGroup>
        <RadioGroup TValue="TypeMedia" CheckedValue="TypeMedia" Buttons="true" Float="Float.Right" Class="btn-group-xs" CheckedValueChanged="TypeMediaChanged" Margin="Margin.Is2.FromRight">
            @if (HasMovie)
            {
                <Radio TValue="TypeMedia" Value="@(TypeMedia.movie)">@TypeMedia.movie.GetName()</Radio>
            }
            @if (HasTV)
            {
                <Radio TValue="TypeMedia" Value="@(TypeMedia.tv)">@TypeMedia.tv.GetName()</Radio>
            }
        </RadioGroup>
    </CardHeader>
    <CardBody Padding="Padding.Is2">
        @if (Options.HasCustomVisibility)
        {
            <CustomVisibility Options="Options"></CustomVisibility>
        }
        else
        {
            <Row Gutter="(8,8)">
                <Repeater Items="@ListMedia" Skip="@Skip" Take="@Take">
                    <Column ColumnSize="ColumnSize.Is(GetCustomStyle)">
                        <Card Margin="Margin.Is0" Style="display:block; text-align:center;">
                            <Blazorise.Link Clicked="@(() => OpenPopupMedia(context))" Style="cursor: pointer;">
                                @if (ShowOnlyYear)
                                {
                                    <Badge Color="Color.Light" Style="font-size: 10px; position: absolute; top: 5px; left: 5px;">@context.release_date?.Year</Badge>
                                }
                                else
                                {
                                    <Badge Color="Color.Light" Style="font-size: 10px; position: absolute; top: 5px; left: 5px;">@context.release_date?.ToShortDateString()</Badge>
                                }

                                @if (context.rating >= 8)
                                {
                                    <Badge Color="Color.Success" Style="font-size: 10px; position: absolute; top: 5px; right: 5px;">@context.rating</Badge>
                                }
                                else if (context.rating >= 6)
                                {
                                    <Badge Color="Color.Warning" Style="font-size: 10px; position: absolute; top: 5px; right: 5px;">@context.rating</Badge>
                                }
                                else if (context.rating > 0)
                                {
                                    <Badge Color="Color.Danger" Style="font-size: 10px; position: absolute; top: 5px; right: 5px;">@context.rating</Badge>
                                }

                                @if (string.IsNullOrEmpty(context.poster_path_small))
                                {
                                    <Blazorise.Icon Name="FontAwesomeIcons.Image" Class="fa-4x mt-3 mb-5" Style="opacity: 0.5"></Blazorise.Icon>
                                }
                                else
                                {
                                    <CardImage Source="@context.poster_path_small" Alt="Poster"></CardImage>
                                }
                            </Blazorise.Link>
                            @*<CardBody Padding="Padding.Is1">
                                    <CardTitle Size="6" Style="font-size: 0.8rem; min-height: 30.6px;" Margin="Margin.Is1.FromBottom">
                                        @context.title
                                    </CardTitle>
                                </CardBody>*@
                        </Card>
                    </Column>
                </Repeater>
            </Row>
        }
    </CardBody>
</Card>

<PopupMedia @ref="PopupMedia" ServiceDetail="@(new Services.TMDB.MediaDetailService())" ServiceProviders="@(new Services.TMDB.WatchProvidersService())"
            ShowOnlyYear="ShowOnlyYear"></PopupMedia>

@code {
    [Parameter]
    public string CardHeader { get; set; }

    [Parameter]
    public Services.IMediaListService Service { get; set; }

    [Parameter]
    public bool ShowOnlyYear { get; set; } = true;

    [Parameter]
    public bool IsIMDB { get; set; } = false;

    [Parameter]
    public bool HasMovie { get; set; } = true;

    [Parameter]
    public bool HasTV { get; set; } = false;

    public string GetCustomStyle => Take - Skip < 6 ? "col-xl-2 col-md-2 col-4" : "col-xl col-md-2 col-4";

    private TypeMedia TypeMedia { get; set; } = TypeMedia.movie;

    private PopupMedia PopupMedia { get; set; }

    private List<MediaDetail> ListMedia { get; set; }

    private int PageNumber = 1;

    private int PageSize = 9;

    private long Skip => (PageNumber - 1) * PageSize;

    private long Take => Math.Min(ListMedia.Count, Skip + PageSize);

    private int ApiCalls { get; set; } = 0;

    private VisibilityOptions Options => new VisibilityOptions
    {
        Loading = ListMedia == null || IsLoading,
        NoData = (!(ListMedia == null || IsLoading) && ListMedia.Count == 0) || (ListMedia != null && ListMedia.Count > 0 & (Take < Skip))
    };

    private Dictionary<string, object> ExtraParameters { get; set; } = null;

    protected override void OnInitialized()
    {
        if (!HasMovie)
        {
            TypeMedia = TypeMedia.tv;
        }
    }

    public async Task LoadData(Settings settings, Dictionary<string, object> ExtraParameters = null)
    {
        ApiCalls = 0;
        ListMedia = new();
        this.ExtraParameters = ExtraParameters;

        IsLoading = true;
        while (ListMedia.Count < PageNumber * 12)
        {
            ApiCalls++;
            var list = await Service.GetListMedia(Http, StorageService, settings, TypeMedia, ApiCalls, ExtraParameters);
            //if (list.Count == 0) break;
            ListMedia.AddRange(list);

            if (ApiCalls > 3) break;
        }
        IsLoading = false;

        StateHasChanged();
    }

    private async Task TypeMediaChanged(TypeMedia value)
    {
        TypeMedia = value;
        ListMedia = new();

        IsLoading = true;
        while (ListMedia.Count < PageNumber * 12)
        {
            ApiCalls++;
            var list = await Service.GetListMedia(Http, StorageService, Settings, TypeMedia, ApiCalls, ExtraParameters);
            //if (list.Count == 0) break;
            ListMedia.AddRange(list);

            if (ApiCalls > 3) break;
        }
        IsLoading = false;
    }

    private async Task PageNumberChanged(int value)
    {
        PageNumber = value;

        IsLoading = true;
        while (ListMedia.Count < PageNumber * 12)
        {
            ApiCalls++;
            var list = await Service.GetListMedia(Http, StorageService, Settings, TypeMedia, ApiCalls, ExtraParameters);
            //if (list.Count == 0) break;
            ListMedia.AddRange(list);

            if (ApiCalls > 3) break;
        }
        IsLoading = false;
    }

    private async Task OpenPopupMedia(MyStream.Modal.MediaDetail media)
    {
        var tmdb_id = "";

        if (IsIMDB && TypeMedia == TypeMedia.tv) //for now, only tv series (imdb) need this kind of workaround
        {
            var service = new MyStream.Services.TmdbExternalIdTvService();
            tmdb_id = await service.GetTmdbId(Http, StorageService, Settings, media.tmdb_id);
        }
        else
        {
            tmdb_id = media.tmdb_id;
        }

        await PopupMedia.ShowModal(tmdb_id, media.TypeMedia);
    }
}