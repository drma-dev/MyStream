@if (Options.Loading)
{
    <div class="alert alert-warning">
        <i class="spinner-border spinner-border-sm"></i> Carregando...
    </div>
}
else if (Options.NoData)
{
    <div class="alert alert-primary">
        <i class="fas fa-exclamation-triangle"></i> Não há dados para mostrar
    </div>
}

@code {
    [Parameter] public VisibilityOptions Options { get; set; }
}