@page "/GoldenGlobes"
@inherits ComponenteCore

<CardMediaList @ref="cardDrama" Service="@serviceList" CardHeader="Best Motion Picture - Drama"></CardMediaList>
<CardMediaList @ref="cardComedy" Service="@serviceList" CardHeader="Best Motion Picture - Musical or Comedy"></CardMediaList>
<CardMediaList @ref="cardAnimated" Service="@serviceList" CardHeader="Best Motion Picture - Animated"></CardMediaList>

@code {
    public CardMediaList cardDrama { get; set; }
    public CardMediaList cardComedy { get; set; }
    public CardMediaList cardAnimated { get; set; }

    public IMediaListService serviceList { get; set; } = new Services.TMDB.ListService();

    private Dictionary<string, object> GetExtraParameters(string list_id)
    {
        return new Dictionary<string, object>() { { "list_id", list_id } }; ;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            IsLoading = true;

            await LoadData();

            IsLoading = false;
        }
    }

    protected async Task LoadData()
    {
        _ = cardDrama.LoadData(Settings, GetExtraParameters("7103543"));
        _ = cardComedy.LoadData(Settings, GetExtraParameters("7103545"));
        _ = cardAnimated.LoadData(Settings, GetExtraParameters("7103548"));
    }
}