@page "/GoldenGlobes"
@inherits ComponenteCore
@inject IStringLocalizer<App> L

<HeadPage ImageSource="logo/goldenglobes.png" Text="@L["golden_desc"]" Link="https://www.goldenglobes.com/"></HeadPage>

<CardMediaList @ref="cardDrama" Service="@serviceList" CardHeader="@L["Drama"]"></CardMediaList>
<CardMediaList @ref="cardComedy" Service="@serviceList" CardHeader="@L["MusicalComedy"]"></CardMediaList>
<CardMediaList @ref="cardAnimated" Service="@serviceList" CardHeader="@L["Animated"]"></CardMediaList>

@code {
    public CardMediaList cardDrama { get; set; }
    public CardMediaList cardComedy { get; set; }
    public CardMediaList cardAnimated { get; set; }

    public IMediaListService serviceList { get; set; } = new Services.TMDB.ListService();

    private Dictionary<string, object> GetExtraParameters(string list_id)
    {
        return new Dictionary<string, object>() { { "list_id", list_id } }; ;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadData();
        }
    }

    protected async Task LoadData()
    {
        await cardDrama.LoadData(extraParameters: GetExtraParameters("7103543"));
        await cardComedy.LoadData(extraParameters: GetExtraParameters("7103545"));
        await cardAnimated.LoadData(extraParameters: GetExtraParameters("7103548"));
    }
}